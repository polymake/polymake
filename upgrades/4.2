# convert topaz::ORIENTATION from Array<Bool> to Array<Int>

upgrade 4.1.1 topaz::ORIENTATION {
    my ($obj) = @_;
    $obj->{_type} =~ s/Bool/Int/;

    my $ref = $obj->{"ORIENTATION"};
    for (my $i=0; $i<$ref->size(); $i++) {
        $ref->[$i] =  ($ref->[$i]) ? 1 : -1;
    }
    return 1;
}

