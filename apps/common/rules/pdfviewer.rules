package Visual;

# pdflatex executable
custom $pdflatex;

# PDF viewer
custom $pdfviewer;

CONFIGURE_OPT {
   find_program($pdflatex, qw( pdflatex ), { prompt => "the PDFLaTeX executable" });
   find_program($pdfviewer, qw( evince okular acroread xpdf open ), { prompt => "a PDF viewer" });
}


