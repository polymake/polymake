object Cone<Float> {

# @category Geometry
# Threshold for zero test for scalar products (e.g. vertex * facet normal)
property EPSILON : Float;

method prepare_computations {
   my $eps=$_[0]->lookup("EPSILON");
   defined($eps) && local_epsilon($eps);
}

}

