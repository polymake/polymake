		</copy>
		<zip destfile="${release_dir}/jReality-javadoc.zip" >
			<fileset dir="${release_dir}/tmp" />
		</zip>
		<delete dir="${release_dir}/tmp"/>
		<mkdir dir="${release_dir}/tmp/tutorial" />
