prefer jreality.graph

package JReality::Viewer;

global_method jreality.graph: draw(Visual::Graph, @) {
   my ($self, $G)=@_;
   $self->append(new Wire($G));
}

package JReality::Viewer::Window;

method detect_dynamic(Visual::GraphEmbedding) {
   my ($self, $Emb)=@_;
   return if defined($Emb->coord);
   foreach (@{$self->feedback_listener}) {
      if (instanceof Visual::SchlegelTransform($_)) {
         $_->add_points($SE);
         return 1;
      }
   }
   $self->class="de.tuberlin.polymake.graph.jreality.SpringEmbedderControl";
   push @{$self->feedback_listener}, $Emb;
   1
}


