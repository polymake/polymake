object Cone<Rational> {

rule ppl.convex_hull.primal: FACETS, LINEAR_SPAN : RAYS | INPUT_RAYS {
   ppl_ch_primal($this);
}
weight 4.10;
precondition : N_RAYS | N_INPUT_RAYS;
incurs FacetPerm;

rule ppl.convex_hull.dual: RAYS, LINEALITY_SPACE, POINTED, LINEALITY_DIM : FACETS | INEQUALITIES {
   ppl_ch_dual($this);
}
weight 4.10;
incurs VertexPerm;


}

