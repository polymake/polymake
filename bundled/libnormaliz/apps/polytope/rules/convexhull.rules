object Cone<Rational> {

   rule libnormaliz.convex_hull.primal: FACETS, LINEAR_SPAN : RAYS | INPUT_RAYS, CONE_AMBIENT_DIM {
      my ($f,$ls) = normaliz_compute($this,from_facets=>0,facets=>1,verbose=>0,skip_long=>0);
      $this->FACETS = $f;
      $this->LINEAR_SPAN = $ls;
   }
   weight 4.10;
   precondition : N_RAYS | N_INPUT_RAYS;
   precondition : POINTED;
   incurs FacetPerm;

   rule libnormaliz.convex_hull.dual: RAYS , LINEALITY_SPACE : FACETS | INEQUALITIES, CONE_AMBIENT_DIM {
      my ($r) = normaliz_compute($this,from_facets=>1,rays=>1,verbose=>0,skip_long=>0);
      $this->RAYS = $r;
      $this->LINEALITY_SPACE = new Matrix(0, $r->cols);
   }
   weight 4.10;
   precondition : FULL_DIM;
   precondition : POINTED;
   incurs VertexPerm;

}

