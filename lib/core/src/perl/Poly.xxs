void ones(SV* bitset)
PROTOTYPE: $
PPCODE:
{
   I32 gimme = GIMME_V;
   if (SvOK(bitset)) {
      SSize_t l = SvCUR(bitset) << 3, i;
      const unsigned char* s = (unsigned char*)SvPVX(bitset);
      unsigned int bit = 1;
      EXTEND(SP, l);
      for (i = 0; i < l; ++i) {
         if ((*s) & bit) {
            PUSHs(sv_2mortal(newSViv(i)));
            if (gimme == G_SCALAR) break;
         }
         if ((bit <<= 1) == (1<<8)) {
            ++s;  bit = 1;
         }
      }
   }
}

