         sv_upgrade(file_entry, SVt_RV);
         SvRV_set(file_entry, (SV*)hits_av);
         SvROK_on(file_entry);
      }
      SV* hitcnt=*av_fetch(hits_av, srcline-1, TRUE);
      if (SvIOK(hitcnt)) {
