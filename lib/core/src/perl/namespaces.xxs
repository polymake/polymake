      SV* flag_sv = PAD_SVl(flag_op->op_targ);
      if (SvIOK(flag_sv) && SvIVX(flag_sv) != no_lvalue) {
         return SvIVX(flag_sv) == magic_lvalue ? leave_with_magic_lvalue(aTHX) : Perl_pp_leavesublv(aTHX);
